<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_employer_home">
<!--    app:startDestination="@+id/navigation_home"-->


    <fragment
        android:id="@+id/nav_employer_home"
        android:name="my.edu.tarc.quickhire.ui.home.EmployerHomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_employer_home" />

    <fragment
        android:id="@+id/nav_dashboard"
        android:name="my.edu.tarc.quickhire.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/nav_editProfile"
        android:name="my.edu.tarc.quickhire.ui.Profile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" >
        <action
            android:id="@+id/action_nav_editProfile_to_nav_profileFragment"
            app:destination="@id/nav_profile" />
    </fragment>
    <fragment
        android:id="@+id/nav_notification"
        android:name="my.edu.tarc.quickhire.ui.notifications.NotificationFragment"
        android:label="fragment_notification"
        tools:layout="@layout/fragment_notification" >
        <action
            android:id="@+id/action_nav_notification_to_nav_notificationDetail"
            app:destination="@id/nav_notificationDetail" />
    </fragment>
    <fragment
        android:id="@+id/nav_notificationDetail"
        android:name="my.edu.tarc.quickhire.ui.notifications.NotificationDetailFragment"
        android:label="fragment_notification_detail"
        tools:layout="@layout/fragment_notification_detail" />
    <fragment
        android:id="@+id/nav_profile"
        android:name="my.edu.tarc.quickhire.ui.Profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/nav_upload"
        android:name="my.edu.tarc.quickhire.ui.notifications.UploadFragment"
        android:label="fragment_upload"
        tools:layout="@layout/fragment_upload" />
    <activity
        android:id="@+id/nav_loginActivity"
        android:name="my.edu.tarc.quickhire.ui.login.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
    <fragment
        android:id="@+id/nav_search"
        android:name="my.edu.tarc.quickhire.ui.SearchandPost.SearchFragment"
        android:label="@string/title_search" />
    <fragment
        android:id="@+id/nav_post"
        android:name="my.edu.tarc.quickhire.ui.SearchandPost.PostingFragment"
        android:label="@string/title_post" />
    <fragment
        android:id="@+id/nav_organization_home"
        android:name="my.edu.tarc.quickhire.ui.home.OrganizationHomeFragment"
        android:label="fragment_organization_home"
        tools:layout="@layout/fragment_organization_home" />


</navigation>